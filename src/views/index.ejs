<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head')  %>
<body>
    <%- include('./partials/header')  %>
        
    
    <main class="main">

            <!-- VIDEO BANNER -->
    <section class="index__section--video">
        <span class="envios-gratis-span">ENVIOS GRATIS EN PRODUCTOS MAYORES A $5000</span>
        <!-- <hr class="index__hr--separador"> -->
    <video onloadstart="this.muted=true" autoplay muted playsinline loop width="100%" class="video--banner">
        <source src="/images/Videodesktop.mp4"></video>

    <video onloadstart="this.muted=true" autoplay muted playsinline loop width="100%" class="video--banner-mobile">
            <source src="/images/mobilecuadrado.mp4">           
        </video>
        <p class="texto-video--mobile">"El regalo de un libro, además de obsequio, es un delicado elogio."<br>
            -Anónimo</p>
    </section>

   

        <!-- SECCION "MAS POPULARES" -->
        <section class="index__main__section">

            <div class="index__main--titulares">
                <h2 id="new">Nuestras Novedades</h2>
                <hr>
            </div> 
            
            
            
                <% libros.forEach(libro => { %>
                    
                        <div class="contenedor" data-aos="fade-down"
                            data-aos-easing="linear"
                            data-aos-duration="1000">
                        <div class="card--populares">
                            <figure>
                            <img src="/images/libros/<%=libro.imagen%>" alt="">
                            </figure>
                        <div class="contenido">
                            <h3>$<%=libro.precio%></h3>
                            <p> <%= libro.description2.slice(0,100) %>...  </p>
                            <a href="/products/detail/<%=libro.id%>">Leer más</a>
                        </div>
                    </div>
                </div>   
                
                <% }) %>                 
            
        
        </section>

        <!-- BANNER DE OFERTAS -->

        <section class="index__main__section--banner">
            <figure class="banner__oferta--desktop">
                <img src="/images/bannerdesktop2-02.png" alt="">
            </figure>
            <figure class="banner__oferta--mobile">
                <img src="/images/banner mobile.png" alt="">
            </figure>
        </section>

        <!-- SECCION CATEGORIAS -->   
            
        <section id="category" class="index__section--categorias" data-aos="zoom-in">

            <div class="index__main--titulares">
                <h2>¡Elige tu categoría favorita!</h2>
                <hr>
            </div> 

            <div class="glider-contain">
                <div class="glider">
                    <div class="imagen--categoria">
                        <a href="/products/category/#allNovels"><img src="/images/categorias/novelas.png" alt=""></a>                        
                    </div>
                    <div class="imagen--categoria">
                        <a href="/products/category/#infantil"><img src="/images/categorias/infantiles.png" alt=""></a>                        
                    </div>
                    <div class="imagen--categoria"> <a href="/products/category/#ciencia"><img src="/images/categorias/divulgacion.png" alt=""></a></div>
                    <div class="imagen--categoria"> <a href="/products/category/#comics"><img src="/images/categorias/mangas.png" alt=""> </a></div>  
                </div>
              
                <button aria-label="Previous" class="glider-prev">«</button>
                <button aria-label="Next" class="glider-next">»</button>
                <div role="tablist" class="dots"></div>
              </div>

        </section>                
           <!-- REDES SOCIALES -->              
    
       <%- include('./partials/redes')  %>

           
       


        
    </main>
    <%- include('./partials/footer')  %>
    <!-- AOS -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>

    <!-- GLIDER -->
    <script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>

    <script>
new Glider(document.querySelector('.glider'), {
  // Mobile-first defaults
  slidesToShow: 1,
  slidesToScroll: 1,
  scrollLock: true,
  dots: '#resp-dots',
  arrows: {
    prev: '.glider-prev',
    next: '.glider-next'
  },
  responsive: [
    {
      // screens greater than >= 775px
      breakpoint: 768,
      settings: {
        // Set to `auto` and provide item width to adjust to viewport
        slidesToShow: '2',
        slidesToScroll: '2',
        itemWidth: 150,
        duration: 0.25
      }
    },{
      // screens greater than >= 1024px
      breakpoint: 1024,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1,
        itemWidth: 100,
        duration: 0.25
      }
    }
  ]
});
    </script>
    <script>
       const hamburguesa = document.getElementById('hamburguesa');        
const nav = document.getElementById('nav');
const buscador = document.getElementById('buscador')

if (hamburguesa && nav && buscador) {
  hamburguesa.addEventListener("click", function() {
    if (nav.style.maxHeight && buscador.style.maxHeight ) {
      nav.style.maxHeight = null;
      buscador.style.maxHeight = null; // reset max-height value
      setTimeout(function() {
        nav.style.display = "none";
        buscador.style.display = "none";
      }, 300); // waits 0.3 seconds for transition to complete
    } else {
      nav.style.display = "block";
      buscador.style.display = "block";
      nav.style.maxHeight = nav.scrollHeight + "px";
      buscador.style.maxHeight = buscador.scrollHeight + "px";
      // sets max-height to the calculated height of the element
    }
  });
}
    </script>
</body>
</html>