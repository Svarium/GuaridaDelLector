    <main class="registro__main">
        

        <!-- formulario registro -->
       <section class="register__section--form">
         
         
        
            <form action="/user/login" method="POST" class="fomulario-registro">
                <h2 class="titulo--registro">Login de usuario</h2>

                <div class="datos--personales">
                <input type="email" name="email" id="email" class="<%= locals.errors && errors.email ? 'errorInput' : null %>"  placeholder="Ingrese su email" >
                <small><%= locals.errors && errors.email ? errors.email.msg : null %></small>
                </div>

                <div class="form--password" >
                    <input type="password" name="password" id="password" class="<%= locals.errors && errors.password ? 'errorInput' : null %>" placeholder="Ingrese su contraseña" >
                    <small><%= locals.errors && errors.password ? errors.password.msg : null %></small>
                </div>
                <div class="form--condiciones--recordar"> 
                    <input type="checkbox" name="recordar" id="">
                    <label for="recordar">Recordarme</label>
                </div>
                <div class="form--condiciones">
                    <a href="/user/register">¿No tenes Cuenta?</a>
                </div>
                <div class="form--buttons">
                    <button type="submit">Ingresar</button>
                    
                </div>
                <div class="form--condiciones">
                    <a href="/">Ir al inicio</a>
                </div>
            </form>

       </section>
      

    </main>

