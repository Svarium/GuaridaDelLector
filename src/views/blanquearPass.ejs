    <main>

        <div class="row ms-3 me-3 justify-content-center">
            <div class="col-md-6">
                <h4 class="text-center">Restablece tu contraseña</h4>
                <hr>
              <form action="/user/blanqueo/<%= userLogin.id %>?_method=PUT " method="POST">

                <div class="mb-3">
                    <label for="password" class="form-label">Ingrese su email</label>
                    <input type="email" name="email" class="form-control <%= (locals.errors && errors.email) && 'is-invalid'%>" id="email">
                    <small class="text-danger ms-2"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
                  </div>
               
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña actual</label>
                    <input type="password" name="oldPass" class="form-control <%= (locals.errors && errors.oldPass) && 'is-invalid'%>" id="oldPass">
                    <small class="text-danger ms-2"><%= locals.errors && errors.oldPass ? errors.oldPass.msg : null %></small>
                  </div>
                <small class="text-danger "></small>
                <div class="mb-3">
                    <label for="password" class="form-label">Nueva contraseña</label>
                    <input type="password" name="newPass" class="form-control <%= (locals.errors && errors.newPass) && 'is-invalid'%>" id="newPass">
                    <small class="text-danger ms-2"><%= locals.errors && errors.newPass ? errors.newPass.msg : null %></small>
                  </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
              </form>
            </div>          
    </main>







    <!-- BOOTSTRAP -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
