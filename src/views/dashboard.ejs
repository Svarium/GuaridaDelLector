<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')  %>
         <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<body>
  
    <nav class="navbar navbar-expand-sm navbar-light bg-body-secondary">
        <div class="container">
          <a href="/"><img src="<%= /http/.test(userLogin.icon) ? userLogin.icon : `/images/iconsProfile/${userLogin.icon}` %>" class="icon-dash" alt="" width="100px"></a>
        <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId"
          aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav me-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="#" aria-current="page">Bienvenido, <%= userLogin.name %> <span class="visually-hidden">(current)</span></a>
            </li>
         <!--    <li class="nav-item ">
              
              <a class="nav-link active" href="/products/agregar">Agregar Libro +</a>
            </li> -->
        
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Menú</a>
              <div class="dropdown-menu" aria-labelledby="dropdownId">
                <a class="dropdown-item" href="/products/agregar">Agregar Libro +</a>
                <a class="dropdown-item" href="/products/autor">Agregar Autor</a>
                <a class="dropdown-item" href="/products/editorial">Agregar editorial</a>
                <a class="dropdown-item" href="/usuarios">Ver Usuarios</a>
                <a class="dropdown-item" href="/user/logout">Cerrar Sesión</a>
              </div>
            </li>
            <a class="nav-link active" href="/" aria-current="page">Ir al Inicio<span class="visually-hidden">(current)</span></a>
          </ul>
          <form action="/search" method="get" class="d-flex my-2 my-lg-0">
            <input  class="form-control me-sm-2" type="search" name="search" placeholder="Buscar Libro">
            <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Buscar</button>
          </form>
        </div>
      </div>
    </nav><br>
    
<main>


   <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">libro</th>
          <th scope="col">precio</th>
          <th scope="col">autor</th>
          <th scope="col">acciones</th>
        </tr>
      </thead>
      <tbody>
       <% libros.forEach(({id,titulo,precio,autor, nombre}) => { %>
          <tr>
          <th scope="row"><%= id %></th>
          <td><%= titulo %></td>
          <td>$ <%= precio %></td>
          <td><%= autor.nombre %></td>
          <td>
              <div class="d-flex justify-content-center gap-2">
                  <!-- <a class="btn btn-sm btn-primary" href="/products/agregar"><i class="fas fa-plus"></i></a> -->
                  <a class="btn btn-sm btn-primary" href="products/detail/<%= id %>"><i class="fa-solid fa-eye"></i></a>
                  <a class="btn btn-sm btn-success" href="products/editar/<%= id %>"><i class="fa-solid fa-edit"></i></a>
                   <!--Boton para abrir el modal-->
              
            <div class="boton-modal detalle-comprar">
                <label class="btn btn-sm btn-success" for="btn-modal" style="background-color: rgb(199, 54, 66);">
                  <i class="fa-solid fa-trash"></i>
                </label>
            </div>
            <!--Fin de Boton-->
                  <!-- <a class="btn btn-sm btn-danger" href="/products/detail/<%=id%>"><i class="fa-solid fa-trash"></i></a> -->
              </div>
      </td>
        </tr>

         <!--Ventana Modal para consultar si queire elminar producto-->
     <input type="checkbox" id="btn-modal">
     <div class="container-modal">
         <div class="content-modal">
             <h2>¡ATENCION!</h2>
             <p>¿Estas seguro de que deseas eliminar esta publicación?</p>
             <div class="btn-cerrar">
               <form action="/products/delete/<%= id %>?_method=DELETE" method="POST" >
                 <button type="submit">ELIMINAR <i class="fa-solid fa-trash"></i></button>
                </form> 
                 <label for="btn-modal">CANCELAR</i></label>
             </div>
         </div>
         <label for="btn-modal" class="cerrar-modal"></label>
     </div>
    <!--Fin de Ventana Modal-->  
       <% }) %>
        
       
      </tbody>
    </table>
   </div>
    
   


</main>



<!-- BOOTSTRAP -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
 </body>
</html>